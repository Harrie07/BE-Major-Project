# app/models/schemas/__init__.py
"""
Pydantic schemas for Mumbai Geo-AI Backend
"""
from pydantic import BaseModel, Field
from typing import Optional, Dict, Any, List
from datetime import datetime

# ========================================
# Common/Utility Schemas
# ========================================
class PaginationParams(BaseModel):
    """Pagination parameters"""
    skip: int = Field(default=0, ge=0, description="Number of records to skip")
    limit: int = Field(default=100, ge=1, le=1000, description="Maximum number of records to return")

# ========================================
# AOI (Area of Interest) Schemas
# ========================================
class AOICreate(BaseModel):
    """Schema for creating a new AOI"""
    name: str = Field(..., min_length=1, max_length=255, description="Name of the AOI")
    description: Optional[str] = Field(None, description="Optional description of the AOI")
    geometry: Dict[str, Any] = Field(..., description="GeoJSON geometry (Polygon or MultiPolygon)")
    ward: Optional[str] = Field(None, max_length=50, description="Mumbai ward designation (e.g., K/W)")
    
    class Config:
        json_schema_extra = {
            "example": {
                "name": "Andheri Test Area",
                "description": "Test area in Andheri suburb",
                "geometry": {
                    "type": "Polygon",
                    "coordinates": [[[72.85, 19.11], [72.87, 19.11], [72.87, 19.13], [72.85, 19.13], [72.85, 19.11]]]
                },
                "ward": "K/W"
            }
        }

class AOIResponse(BaseModel):
    """Schema for AOI response"""
    id: int
    name: str
    description: Optional[str] = None
    geometry: Dict[str, Any]
    ward: Optional[str] = None
    area_sqm: Optional[float] = None
    created_at: Optional[datetime] = None
    updated_at: Optional[datetime] = None
    
    class Config:
        from_attributes = True

class AOIUpdate(BaseModel):
    """Schema for updating an AOI"""
    name: Optional[str] = Field(None, min_length=1, max_length=255)
    description: Optional[str] = None
    ward: Optional[str] = Field(None, max_length=50)

# ========================================
# Job Schemas
# ========================================
class JobCreate(BaseModel):
    """Schema for creating a job"""
    aoi_id: int = Field(..., description="Area of Interest ID")
    name: Optional[str] = Field(None, max_length=100, description="Optional job name")
    parameters: Optional[Dict[str, Any]] = Field(default_factory=dict, description="Job parameters")

class JobResponse(BaseModel):
    """Schema for job response"""
    id: int
    aoi_id: Optional[int] = None
    name: Optional[str] = None
    status: str
    created_at: datetime
    updated_at: datetime
    parameters: Optional[Dict[str, Any]] = None
    result_url: Optional[str] = None
    error_message: Optional[str] = None
    
    class Config:
        from_attributes = True

# ========================================
# Detection Schemas
# ========================================
class DetectionResponse(BaseModel):
    """Schema for detection response"""
    id: int
    job_id: int
    description: Optional[str] = None
    geometry: Optional[Dict[str, Any]] = None
    confidence_score: Optional[float] = None
    area_sqm: Optional[float] = None
    flagged: bool = False
    change_type: Optional[str] = None
    created_at: Optional[datetime] = None
    
    class Config:
        from_attributes = True

# ========================================
# Export All
# ========================================
__all__ = [
    "PaginationParams",
    "AOICreate",
    "AOIResponse",
    "AOIUpdate",
    "JobCreate",
    "JobResponse",
    "DetectionResponse",
]
